{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "lib": ["ESNext"],
    "target": "ES2015",
    "module": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "$schema": "https://json.schemastore.org/tsconfig"
}
